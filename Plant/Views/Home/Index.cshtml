<!--shipping area start-->
<div class="shipping_area shipping_two">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="single_shipping">
                    <div class="shipping_icone">
                        <img src="~/LayoutAssets/img/about/shipping1.png" alt="">
                    </div>
                    <div class="shipping_content">
                        <h3>@Localizer["Free Delivery"]</h3>
                        <p>@Localizer["Free shipping"]</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_shipping col_2">
                    <div class="shipping_icone">
                        <img src="~/LayoutAssets/img/about/shipping2.png" alt="">
                    </div>
                    <div class="shipping_content">
                        <h3>@Localizer["Safe Payment"]</h3>
                        <p>@Localizer["Payment"]</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_shipping col_3">
                    <div class="shipping_icone">
                        <img src="~/LayoutAssets/img/about/shipping3.png" alt="">
                    </div>
                    <div class="shipping_content">
                        <h3>@Localizer["Friendly Services"]</h3>
                        <p>@Localizer["return goods"]</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--shipping area end-->
<!--product area start-->
<div class="product_area  mb-95 ">
    <div class="container">
        <div class="row pt-5">
            <div class="col-12">
                <div class="product_header">
                    <div class="section_title">
                        <h2>@Localizer["featured products"]</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade show active">
                <div class="row">
                    <div class="product_carousel product_column4 owl-carousel">
                        @foreach (var item in listProduct)
                        {
                            <div class="col-lg-3">
                                <div class="product_items">
                                    <article class="single_product">
                                        <figure>
                                            <div class="product_thumb">
                                                <a class="primary_img" asp-controller="Products" asp-action="GetDetailProduct" asp-route-id="@item.ProductId">
                                                    <img src="~/image/product/@item.Image" alt="">
                                                </a>
                                                @if (item.Voucher != null)
                                                {
                                                    <div class="label_product">
                                                        <span class="label_sale">-@item.Voucher%</span>
                                                    </div>
                                                }
                                                
                                            </div>
                                            <figcaption class="product_content">
                                                <h4 class="product_name">
                                                    <a asp-controller="Products" asp-action="GetDetailProduct" asp-route-id="@item.ProductId">
                                                        @item.ProductName
                                                    </a>
                                                </h4>
                                                <div class="price_box">
                                                    @if (item.Voucher == null)
                                                    {
                                                        <span class="current_price">@item.Price@item.CurrencyUnit</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="current_price">@item.Price@item.CurrencyUnit</span>
                                                        <span class="old_price">@item.OriginalPrice@item.CurrencyUnit</span>
                                                    }
                                                </div>
                                            </figcaption>
                                        </figure>
                                    </article>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--product area end-->
