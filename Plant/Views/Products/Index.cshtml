@using Microsoft.AspNetCore.Mvc.Localization
@using Plant.ViewModels
@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Plant.ViewModels.ProductVm>
@inject IViewLocalizer Localizer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int CurrentPage = ViewBag.CurrentPage;
    List<CategoryVm> category = ViewBag.Category;
    string TextSort = ViewBag.TextSort;
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area" style=" background-image: url('../../LayoutAssets/img/slider/capturar-co2-atmosfera.jpg') ">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <h3 style="font-weight: 800; color: white; text-shadow: 0 0 0.2em black; ">@Localizer["product"]</h3>
                    <ul>
                        <li style="font-weight: 600; color: white; text-shadow: 0 0 0.2em black; "><a asp-area="" asp-controller="Home" asp-action="Index">@Localizer["home"]</a></li>
                        <li style="font-weight: 600; color: yellowgreen; text-shadow: 0 0 0.2em black; ">@Localizer["product"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--shop  area start-->
<div class="shop_area shop_reverse mt-100 mb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-12">
                <div class="blog_sidebar_widget">
                    <div class="widget_list widget_search">
                        <div class="widget_title">
                            <h3>@Localizer["search"]</h3>
                        </div>
                        <form asp-action="SearchProduct" method="get">
                            <input placeholder="@Localizer["search"]..." type="text" name="productName" autocomplete="off">
                            <button type="submit">@Localizer["search"]</button>
                        </form>
                    </div>
                    <div class="widget_list widget_categories">
                        <div class="widget_title">
                            <h3>@Localizer["category"]</h3>
                        </div>
                        <ul>
                            @foreach (var item in category)
                            {
                                if (item.ParentId == null)
                                {
                                    int count = 0;
                                    @foreach (var child in category)
                                    {
                                        if (child.ParentId == item.CategoryId)
                                        {
                                            count++;
                                        }
                                    }
                                    if (count > 0)
                                    {
                                        <li>
                                            <a asp-area="" asp-controller="Products" asp-action="GetListProducts" asp-route-id="@item.CategoryId"> @item.CategoryName <i class="fas fa-angle-right"></i></a>
                                            <ul>
                                                @foreach (var child in category)
                                                {
                                                    if (child.ParentId == item.CategoryId)
                                                    {
                                                        <li>
                                                            <a asp-area="" asp-controller="Products" asp-action="GetListProducts" asp-route-id="@child.CategoryId"> @child.CategoryName</a>
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a asp-area="" asp-controller="Products" asp-action="GetListProducts" asp-route-id="@item.CategoryId"> @item.CategoryName</a>
                                        </li>

                                    }

                                }
                            }
                        </ul>
                    </div>
                </div>

            </div>
            <div class="col-lg-9 col-md-9 col-12">
                <!--shop wrapper start-->
                <!--shop toolbar start-->
                <div class="shop_toolbar_wrapper">
                    <div class="shop_toolbar_btn">
                    </div>
                    <div class=" niceselect_option">
                        <div class="form-group">
                            @{
                                var encodeSortByPriceDescending = System.Web.HttpUtility.UrlEncode("Giá giảm");
                                var encodeSortByPriceAscending = System.Web.HttpUtility.UrlEncode("Giá tăng");
                                var encodeSortByVoucher = System.Web.HttpUtility.UrlEncode("Khuyễn mãi");
                                var encodeSortBySellCount = System.Web.HttpUtility.UrlEncode("Lượt bán");
                                var EncodeTextSort = System.Web.HttpUtility.UrlEncode(TextSort);
                            }
                            <select class="form-control" name="sortIndex" id="sortIndex">
                                @{
                                    if (EncodeTextSort == encodeSortByPriceDescending)
                                    {
                                        <option value="">Tất cả sản phẩm</option>
                                        <option value="@Html.Raw(encodeSortByPriceAscending)">Giá: Thấp đến Cao</option>
                                        <option value="@Html.Raw(encodeSortByPriceDescending)" selected>Giá: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortByVoucher)">Khuyến mãi: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortBySellCount)">Lượt bán: Cao đến Thấp</option>
                                    }
                                    else if (EncodeTextSort == encodeSortByPriceAscending)
                                    {
                                        <option value="">Tất cả sản phẩm</option>
                                        <option value="@Html.Raw(encodeSortByPriceAscending)" selected>Giá: Thấp đến Cao</option>
                                        <option value="@Html.Raw(encodeSortByPriceDescending)">Giá: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortByVoucher)">Khuyến mãi: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortBySellCount)">Lượt bán: Cao đến Thấp</option>
                                    }
                                    else if (EncodeTextSort == encodeSortByVoucher)
                                    {
                                        <option value="">Tất cả sản phẩm</option>
                                        <option value="@Html.Raw(encodeSortByPriceAscending)">Giá: Thấp đến Cao</option>
                                        <option value="@Html.Raw(encodeSortByPriceDescending)">Giá: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortByVoucher)" selected>Khuyến mãi: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortBySellCount)">Lượt bán: Cao đến Thấp</option>
                                    }
                                    else if (EncodeTextSort == encodeSortBySellCount)
                                    {
                                        <option value="">Tất cả sản phẩm</option>
                                        <option value="@Html.Raw(encodeSortByPriceAscending)">Giá: Thấp đến Cao</option>
                                        <option value="@Html.Raw(encodeSortByPriceDescending)">Giá: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortByVoucher)">Khuyến mãi: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortBySellCount)" selected>Lượt bán: Cao đến Thấp</option>
                                    }
                                    else
                                    {
                                        <option value="" selected>Tất cả sản phẩm</option>
                                        <option value="@Html.Raw(encodeSortByPriceAscending)">Giá: Thấp đến Cao</option>
                                        <option value="@Html.Raw(encodeSortByPriceDescending)">Giá: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortByVoucher)">Khuyến mãi: Cao đến Thấp</option>
                                        <option value="@Html.Raw(encodeSortBySellCount)" >Lượt bán: Cao đến Thấp</option>
                                    }
                                }

                            </select>
                        </div>
                    </div>

                </div>
                <!--shop toolbar end-->
                <div class="row shop_wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 col-lg-3 col-6 " data-aos="fade-up">
                            <article class="single_product">
                                <figure>
                                    <div class="product_thumb">
                                        <a class="primary_img" asp-area="" asp-controller="Products" asp-action="GetDetailProduct" asp-route-id="@item.ProductId">
                                            <img src="~/image/product/@item.Image" alt="">
                                        </a>
                                        <div class="label_product">
                                            @if (item.Voucher > 0)
                                            {
                                                <span class="label_sale">-@item.Voucher% </span>
                                            }
                                        </div>

                                    </div>
                                    <div class="product_content grid_content">
                                        <div class="product_price_rating">

                                            <h4 class="product_name">
                                                <a asp-area="" asp-controller="Products" asp-action="GetDetailProduct" asp-route-id="@item.ProductId">
                                                    @item.ProductName
                                                </a>
                                            </h4>
                                            <div class="price_box">
                                                <span class="current_price">@item.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</span>
                                                <span class="count_product_sell">Đã bán @item.CountProductSell</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="product_content list_content">

                                        <h4 class="product_name">
                                            <a asp-area="" asp-controller="Products" asp-action="GetDetailProduct" asp-route-id="@item.ProductId">@item.ProductName</a>
                                        </h4>
                                        <div class="price_box">
                                            <span class="current_price">@item.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</span>
                                            <span class="count_product_sell">Đã bán @item.CountProductSell</span>
                                        </div>
                                        <div class="product_desc">
                                            <p>
                                                @item.ShortDes
                                            </p>
                                        </div>
                                    </div>
                                </figure>
                            </article>
                        </div>
                    }

                </div>

                <!--blog pagination area start-->
                <div class="blog_pagination">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <ul class="pagination">
                                    <pager class="pager-container" list="@Model" asp-area="" asp-controller="Products" asp-action="Index" />
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!--blog pagination area end-->
                <!--shop toolbar end-->
                <!--shop wrapper end-->
            </div>
        </div>
    </div>
</div>
<!--shop  area end-->
@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#sortIndex').change(function () {
            var selectedValue = $(this).val();
            $.ajax({
                url: '/Products/SortListProduct',
                datatype: "json",
                type: "GET",
                data: {
                    sortProduct: selectedValue
                },
                async: true,
                success: function (results) {
                    if (results.status == "success") {
                        window.location.href = results.redirectUrl;
                    }
                },
                error: function (xhr) {
                    alert("error");
                }
            });
        });
    })
</script>
}