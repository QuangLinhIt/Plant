@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="account_body_login">
    <div class="row">
        <div class="col-lg-4 col-md-3"></div>
        <div class="col-lg-4 col-md-6">
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h3 style="display:flex;justify-content:center;margin-bottom:10px;font-weight:700;">ADD NEW INFORMATION</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="account_login_label" asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="account_login_label" asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="account_login_label" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" readonly />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="account_login_submit">Register</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
