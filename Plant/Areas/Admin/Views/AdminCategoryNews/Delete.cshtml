@model Plant.Models.CategoryNewTranslation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a href="#">Tin tức</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Danh mục tin tức</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa danh mục tin tức</li>
    </ol>
</nav>
<!-- Container -->
<div class="container-fluid px-lg-4">
    <!-- Title -->
    <div class="hk-pg-header">
        <h4 class="hk-pg-title"><span class="pg-title-icon"><span class="feather-icon"><i data-feather="toggle-right"></i></span></span>Xóa danh mục tin tức</h4>
    </div>
    <!-- /Title -->
    <!-- Row -->
    <div class="row">
        <div class="col-xl-12">
            <section class="hk-sec-wrapper">
                <form asp-action="Delete">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-1 col-sm-12">
                            <label asp-for="CategoryNewId" class="control-label">#Mã</label>
                            <input asp-for="CategoryNewId" class="form-control" readonly />
                        </div>
                        <div class="form-group col-md-3 col-sm-12">
                            <label class="control-label">Ngôn ngữ</label>
                            <input value="@Model.Lang.LangName" class="form-control" readonly />
                        </div>
                        <div class="form-group col-md-5 col-sm-12">
                            <label class="control-label">Danh mục tin tức</label>
                            <input value="@Model.CategoryNewName" class="form-control" readonly />
                        </div>
                        <div class="form-group col-md-3 col-sm-12">
                            <label class="control-label">Mã danh mục cha</label>
                            <input value="@Model.CategoryNew.ParentNewId" class="form-control" readonly />
                        </div>
                        <div class="form-group col-md-1 col-sm-12">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                        <div class="form-group col-md-1 col-sm-12">
                            <a class="btn btn-dark" asp-action="Index">Back</a>
                        </div>
                    </div>


                </form>

            </section>
        </div>
    </div>
</div>
<!-- /Container -->


@section Scripts {
}
