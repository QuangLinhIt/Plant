@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Plant.Models.AspNetUser>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index">Quản lí hệ thống</a></li>
        <li class="breadcrumb-item active" aria-current="page">Danh sách tài khoản</li>
    </ol>
</nav>
<!-- /Breadcrumb -->
<!-- Container -->
<div class="container-fluid px-lg-4">
    <!-- Title -->
    <div class="hk-pg-header mb-10">
        <div>
            <h4 class="hk-pg-title"><span class="pg-title-icon"><span class="feather-icon"><i data-feather="book"></i></span></span>Danh sách tài khoản</h4>
        </div>

    </div>
    <!-- /Title -->
    <section class="hk-sec-wrapper mb-3">
        <div class="row">
            <div class="col-sm">
                <div class="table-wrap">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th>STT</th>
                                    <th class="py-3">LastName</th>
                                    <th class="py-3">FirstName</th>
                                    <th class="py-3">Email</th>
                                    <th class="py-3">PhoneNumber</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 1; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@Model[i].LastName</td>
                                        <td>@Model[i].FirstName</td>
                                        <td>@Model[i].Email</td>
                                        <td>@Model[i].PhoneNumber</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 row col-sm-12 col-md-12 col-lg-12 d-flex justify-content-center" aria-label="Page navigation example">
            <ul class="pagination">
                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminAspNetUsers" asp-action="Index" asp-route-LangId="@ViewBag.CurrrentLangId" />
            </ul>
        </div>
    </section>
</div>

