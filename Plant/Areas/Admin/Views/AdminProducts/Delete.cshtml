@model Plant.Models.ProductTranslation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Danh sách sản phẩm</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa sản phẩm</li>
    </ol>
</nav>
<!-- Container -->
<div class="container-fluid px-lg-4">
    <!-- Title -->
    <div class="hk-pg-header">
        <h4 class="hk-pg-title"><span class="pg-title-icon"><span class="feather-icon"><i data-feather="toggle-right"></i></span></span>Xóa sản phẩm</h4>
    </div>
    <!-- /Title -->
    <!-- Row -->
    <div class="row">
        <div class="col-xl-12">
            <section class="hk-sec-wrapper">

                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="mb-1 text-primary font-weight-bold"><i class="far fa-font"></i> Tên sản phẩm</label>
                        <input value="@Model.ProductName"  class="form-control" readonly>
                    </div>
                    <div class="col-md-3 form-group">
                        <label class="mb-1 text-primary font-weight-bold"><i class="far fa-money-bill-alt"></i> Giá nhập</label>
                        <input value="@Model.OriginalPrice" class="form-control"  readonly>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="mb-1 text-primary font-weight-bold"><i class="far fa-chart-line"></i> Giá bán</label>
                        <input value="@Model.Price"  class="form-control"  readonly>
                    </div>
                </div>
                <form asp-action="Delete" method="post">
                    <input asp-for="ProductId" hidden />
                    <input asp-for="LangId" hidden />
                    <div class="form-group my-2 d-flex align-items-center">
                        <a asp-action="Index" class="btn btn-dark mr-1">Đóng <i class="far fa-times"></i></a>
                        <input type="submit" name="" value="Delete &#xf00c" class="btn btn-danger mr-2 fa-input">
                    </div>
                </form>

            </section>

        </div>
    </div>
</div>
<!-- /Container -->


@section Scripts {

}
