@model Plant.Models.Contact
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index">Liên hệ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết liên hệ</li>
    </ol>
</nav>

<!-- Container -->
<div class="container-fluid px-lg-4">
    <!-- Title -->
    <div class="hk-pg-header">
        <h4 class="hk-pg-title"><span class="pg-title-icon"><span class="feather-icon"><i data-feather="toggle-right"></i></span></span>Thêm mới tin tức</h4>
    </div>
    <!-- /Title -->
    <!-- Row -->
    <div class="row">
        <div class="col-xl-12">
            <section class="hk-sec-wrapper">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="mb-1 text-primary font-weight-bold"><i class="far fa-font"></i> Họ tên</label>
                        <input asp-for="Name" type="text" class="form-control" id="control1">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="mb-1 text-primary font-weight-bold"><i class="far fa-font"></i> Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="control1">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="mb-1 text-primary font-weight-bold"><i class="far fa-font"></i> Tiêu đề</label>
                        <input asp-for="Title" type="text" class="form-control" id="control1">
                    </div>
                    <div class="form-group col-md-12">
                        <label class="mb-1 text-primary font-weight-bold"><i class="far fa-align-left"></i> Nội dung</label>
                        <textarea rows="5" class="form-control" placeholder="Description" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group my-2 d-flex align-items-center">
                        <a asp-action="Index" class="btn btn-dark mr-1">Đóng <i class="far fa-times"></i></a>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!-- /Container -->
