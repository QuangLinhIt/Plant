@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Plant.Models.Contact>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index"></a>Liên hệ</li>
    </ol>
</nav>
<!-- /Breadcrumb -->
<!-- Container -->
<div class="container-fluid px-lg-4">
    <!-- Title -->
    <div class="hk-pg-header mb-10">
        <div>
            <h4 class="hk-pg-title"><span class="pg-title-icon"><span class="feather-icon"><i data-feather="book"></i></span></span>Danh sách liên hệ</h4>
        </div>
        
    </div>
    <!-- /Title -->


    <section class="hk-sec-wrapper mb-3">
        <div class="row">
            <div class="col-sm">
                <div class="table-wrap">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th class="py-3">#Mã</th>
                                    <th class="py-3">Họ tên</th>
                                    <th class="py-3">Email</th>
                                    <th class="py-3">Thời gian</th>
                                    <th class="py-3">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>#@item.ContactId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.CreateDay</td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.ContactId" class="mx-2" data-toggle="tooltip" data-original-title="Detail"><i class="far fa-eye text-dark"></i></a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 row col-sm-12 col-md-12 col-lg-12 d-flex justify-content-center" aria-label="Page navigation example">
            <ul class="pagination">
                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminContacts" asp-action="Index" />
            </ul>
        </div>
    </section>
</div>



