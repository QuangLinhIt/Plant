@model Plant.Models.Language

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcrumb -->
<nav class="hk-breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-light bg-transparent">
        <li class="breadcrumb-item"><a href="#">Quản lí hệ thống</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Ngôn ngữ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thêm mới ngôn ngữ</li>
    </ol>
</nav>
<!-- Container -->
<div class="container-fluid px-lg-4">
    <!-- Title -->
    <div class="hk-pg-header">
        <h4 class="hk-pg-title"><span class="pg-title-icon"><span class="feather-icon"><i data-feather="toggle-right"></i></span></span>Thêm mới ngôn ngữ</h4>
    </div>
    <!-- /Title -->
    <!-- Row -->
    <div class="row">
        <div class="col-xl-12">
            <section class="hk-sec-wrapper">
                <div class="row">
                    <div class="col-sm">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="LangName" class="control-label">Ngôn ngữ</label>
                                    <input asp-for="LangName" class="form-control" />
                                    <span asp-validation-for="LangName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label asp-for="SignLanguages" class="control-label">Kí hiệu</label>
                                    <input asp-for="SignLanguages" class="form-control" />
                                    <span asp-validation-for="SignLanguages" class="text-danger"></span>
                                </div>
                                <div class="form-group my-2 d-flex align-items-center">
                                    <a asp-action="Index" class="btn btn-dark mr-1">Đóng <i class="far fa-times"></i></a>
                                    <input type="submit" name="" value="Tạo mới &#xf00c" class="btn btn-success mr-2 fa-input">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!-- /Container -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
